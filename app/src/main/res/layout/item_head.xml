<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <ImageButton
        android:id="@+id/mImageButton_back"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:src="@drawable/arrows_left"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/mImageButton_menu"
        android:layout_width="34dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:background="@drawable/ic_more" />

    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/mImageButton_menu"
        android:background="@mipmap/logo_blue" />

    <TextView
        android:id="@+id/mTextView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="设备名称"
        android:textColor="#fff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mImageView_error"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/ic_shape"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mImageView_location"
            android:layout_width="23dp"
            android:layout_height="28dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/ic_location"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mImageView_4g"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/ic_icon_4g"
            android:visibility="gone" />


        <com.deepblue.greyox.view.BatteryView
            android:id="@+id/mBatteryView"
            android:layout_width="39dp"
            android:layout_height="21dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal"
            app:frameColor="@android:color/white"
            app:highColor="@android:color/white"
            app:lowColor="@android:color/holo_red_dark"
            app:middleColor="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/mTextView_dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mTextView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:textSize="22sp" />
    </LinearLayout>


</RelativeLayout>

