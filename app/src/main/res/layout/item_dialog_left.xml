<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTextView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:text="Operator1"
            android:textColor="#fffcfcfc"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/mLinearLayout_zybg"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/select_dialog"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_zybg"
                android:drawablePadding="9dp"
                android:text="作业报告"
                android:textColor="#fffcfcfc"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout_gzlb"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/select_dialog"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_gzlb"
                android:drawablePadding="9dp"
                android:text="故障列表"
                android:textColor="#fffcfcfc"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout_set"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/select_dialog"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_set"
                android:drawablePadding="9dp"
                android:text="设置"
                android:textColor="#FCFCFC"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mTextView_logout"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_marginBottom="94dp"
            android:background="@drawable/shape_logout"
            android:gravity="center"
            android:text="退出"
            android:textColor="#CCFFFFFF"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>