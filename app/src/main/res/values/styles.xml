<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme_pub" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#001110</item>
        <item name="android:colorPrimaryDark">#001110</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowAnimationStyle">@style/MyActivitySiwtchAnimation</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="actNNS" parent="AppTheme_pub">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="actNN" parent="AppTheme_pub">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <!--          &lt;!&ndash;        <item name="android:windowDrawsSystemBarBackgrounds">true</item>&ndash;&gt;-->
        <!--          <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="MyActivitySiwtchAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <!--<item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>-->
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>

